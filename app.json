{
  "expo": {
    "name": "Kelime Oyunu",
    "slug": "kelime-oyunu",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kelimeoyunu",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kelimeoyunu.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Profil fotoğrafı için kamera kullanımı",
        "NSPhotoLibraryUsageDescription": "Profil fotoğrafı seçmek için galeri erişimi gerekiyor"
      }
    },
    "android": {
      "package": "com.kelimeoyunu.app",
      "permissions": [
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-image-picker",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#3B82F6",
          "defaultChannel": "default",
          "sounds": [
            "./assets/sounds/notification.wav"
          ]
        }
      ],
      [
        "expo-facebook",
        {
          "userTrackingPermission": "Bu uygulama kişiselleştirilmiş reklamlar göstermek için sizin verilerinizi kullanabilir.",
          "advertiserIDCollectionEnabled": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "notification": {
      "icon": "./assets/images/notification-icon.png",
      "color": "#3B82F6",
      "androidMode": "default",
      "androidCollapsedTitle": "Kelime Oyunu",
      "iosDisplayInForeground": true
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}